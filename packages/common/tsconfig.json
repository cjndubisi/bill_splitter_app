{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist/",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "index.web.tsx", "index.native.tsx", "*.web", "*.native", "*"]
    },
    "typeRoots": ["../../@types", "../../node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.(ts|tsx)"]
}
